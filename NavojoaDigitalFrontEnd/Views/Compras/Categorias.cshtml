@{
    ViewBag.Title = "Categorías";
}

@section Styles {
<link rel="stylesheet" href="~/assets/libs/gridjs/theme/mermaid.min.css">
<!-- datepicker css -->
<link rel="stylesheet" href="~/assets/libs/flatpickr/flatpickr.min.css">
}

<div v-cloak id="appVue">
    <!-- row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="position-relative">
                        <div class="modal-button mt-2">
                            <button type="button" id="btnAdd" style="display:none"
                                    class="btn btn-success btn-rounded waves-effect waves-light mb-2 me-2"
                                    data-bs-toggle="modal" data-bs-target=".modalEdit" v-on:click="current.reset()">
                                <i class="mdi mdi-plus me-1"></i> Agregar Registro
                            </button>
                        </div>
                    </div>
                    <div id="table-catalog"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

    <!-- Modal -->
    <div class="modal fade modalEdit" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="orderdetailsModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 v-show="current.id <= 0" class="modal-title">@Html.Raw("Agregar Categoría")</h5>
                    <h5 v-show="current.id > 0" class="modal-title">@Html.Raw("Editar Categoría")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="formrow-firstname-input" class="form-label">Nombre</label>
                            <input type="text" class="form-control" v-model="current.nombre"/>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" v-on:click="guardaRegistro()">Guadar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- end modal -->
</div>

@section Scripts {
<!-- gridjs js -->
<script src="https://cdn.jsdelivr.net/npm/gridjs/dist/gridjs.umd.js"></script>

<!-- datepicker js -->
<script src="~/assets/libs/flatpickr/flatpickr.min.js"></script>

<script src="~/js/Views/Compras/categorias.js"></script>
}