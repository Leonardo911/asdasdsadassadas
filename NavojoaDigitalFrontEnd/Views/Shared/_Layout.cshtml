<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <title>@Html.Raw("Navojoa Digital")</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Sistema de digitalización de procesos del ayuntamiento de Navojoa Sonora" name="description" />
    <meta content="Infusoft" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <!-- datepicker css -->
    <link rel="stylesheet" href="~/assets/libs/flatpickr/flatpickr.min.css">
    <!-- Custom Css -->
    <link href="~/assets/css/custom.css" rel="stylesheet" type="text/css" />
    <!-- alertifyjs Css -->
    <link href="~/assets/libs/alertifyjs/build/css/alertify.min.css" rel="stylesheet" type="text/css" />

    <!-- alertifyjs default themes  Css -->
    <link href="~/assets/libs/alertifyjs/build/css/themes/default.min.css" rel="stylesheet" type="text/css" />
    <!-- Sweet Alert-->
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />

    @RenderSection("Styles", required: false);

</head>
<body data-sidebar="dark">
    <div id="loader" style="display:none;">
        <div id="loaderbackground"></div>
        <div class="spinner-border text-secondary m-1" role="status" style="z-index:10000001; position:fixed; top:50%; left:50%;"></div>
        <div><label id="textLoading" style="z-index:10000001;position: fixed;top: 53%;left: 40%;font-size: 20px;"></label></div>
    </div>
    <!-- Begin page -->
    <div id="layout-wrapper">
        <header id="page-topbar" class="isvertical-topbar">
            <div class="navbar-header">
                <div class="d-flex">
                    <!-- LOGO -->
                    <div class="navbar-brand-box">
                        <a href="/" class="logo logo-dark">
                            <span class="logo-sm">
                                <img src="~/assets/images/logo-dark-sm.png" alt="" height="22">
                            </span>
                            <span class="logo-lg">
                                <img src="~/assets/images/logo-dark-sm.png" alt="" height="22">
                            </span>
                        </a>

                        <a href="/" class="logo logo-light">
                            <span class="logo-lg">
                                <img src="~/assets/images/logo-light.png" alt="" height="22">
                            </span>
                            <span class="logo-sm">
                                <img src="~/assets/images/logo-light-sm.png" alt="" height="22">
                            </span>
                        </a>
                    </div>

                    <button type="button" class="btn btn-sm px-3 font-size-16 header-item vertical-menu-btn topnav-hamburger">
                        <span class="hamburger-icon open">
                            <span></span>
                            <span></span>
                            <span></span>
                        </span>
                    </button>

                    <div class="d-none d-sm-block ms-3 align-self-center">
                        <h4 class="page-title">@Html.Raw(ViewBag.Title)</h4>
                    </div>

                </div>

                <div class="d-flex">
                </div>
            </div>
        </header>
        <!-- ========== Left Sidebar Start ========== -->
        <div class="vertical-menu">

            <!-- LOGO -->
            <div class="navbar-brand-box">
                <a href="/" class="logo logo-dark">
                    <span class="logo-sm">
                        <img src="~/assets/images/logoslider.png" alt="" height="30">
                    </span>
                    <span class="logo-lg">
                        <img src="~/assets/images/logoslider.png" alt="" height="30">
                    </span>
                </a>

                <a href="index.html" class="logo logo-light">
                    <span class="logo-lg">
                        <img src="~/assets/images/logoslider.png" alt="" height="30">
                    </span>
                    <span class="logo-sm">
                        <img src="~/assets/images/logoslider.png" alt="" height="30">
                    </span>
                </a>
            </div>

            <button type="button" class="btn btn-sm px-3 header-item vertical-menu-btn topnav-hamburger">
                <span class="hamburger-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
            </button>

            <div data-simplebar class="sidebar-menu-scroll">

                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <!-- Left Menu Start -->
                    <ul class="metismenu list-unstyled" id="side-menu">
                        <li class="menu-title">Menu</li>

                        <li>
                            <a href="/">
                                <i class="icon nav-icon" data-eva="grid-outline"></i>
                                <span class="menu-item">Inicio</span>
                            </a>
                        </li>

                        <li class="menu-title">@Html.Raw("Configuración")</li>

                        <li>
                            <a href="javascript: void(0);" class="has-arrow">
                                <i class="icon nav-icon" data-eva="shopping-bag-outline"></i>
                                <span class="menu-item">Compras</span>
                            </a>
                            <ul class="sub-menu" aria-expanded="false">
                                <li>
                                    <a href="javascript: void(0);" class="has-arrow">@Html.Raw("Configuración")</a>
                                    <ul class="sub-menu" aria-expanded="true">
                                        <li><a href="/compras/categorias">Categorías</a></li>
                                        <li><a href="/compras/productos">Productos</a></li>
                                        <li><a href="/compras/servicios">Servicios</a></li>
                                        <li><a href="/egresos/partidas">Partidas</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>

                        <li>
                            <a href="javascript: void(0);" class="has-arrow">
                                <i class="icon nav-icon" data-eva="shopping-bag-outline"></i>
                                <span class="menu-item">Ayuntamiento</span>
                            </a>
                            <ul class="sub-menu" aria-expanded="false">
                                <li><a href="/municipio/dependencias">Dependencias</a></li>
                                <li><a href="/municipio/puestos">Puestos</a></li>
                            </ul>
                        </li>

                        <li>
                            <a href="javascript: void(0);" class="has-arrow">
                                <i class="icon nav-icon" data-eva="person-done-outline"></i>
                                <span class="menu-item">@Html.Raw("Autenticación")</span>
                            </a>
                            <ul class="sub-menu" aria-expanded="false">
                                <li><a href="javascript: void(0);">Usuarios</a></li>
                                <li><a href="javascript: void(0);">Roles</a></li>
                                <li><a href="javascript: void(0);">Autorizaciones</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- Sidebar -->

                <div class="p-3 px-4 sidebar-footer">
                    <p class="mb-1 main-title"><script>document.write(new Date().getFullYear())</script>&copy;</p>
                </div>
            </div>
        </div>
        <!-- Left Sidebar End -->

        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>

        <footer class="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <script>document.write(new Date().getFullYear())</script>&copy;
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- END layout-wrapper -->
    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>

    <!-- JAVASCRIPT -->
    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/metismenujs/metismenujs.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/eva-icons/eva.min.js"></script>
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
    <script src="~/assets/js/ajax.js"></script>
    <!-- alertifyjs js -->
    <script src="~/assets/libs/alertifyjs/build/alertify.min.js"></script>
    <!-- Sweet Alerts js -->
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
